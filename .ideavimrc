""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set highlightedyank
set surround
set multiple-cursors
set commentary
set argtextobj
set easymotion
set textobj-entire
set ReplaceWithRegister
set NERDTree

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Common settings -------------------------
set showmode
set so=8
set incsearch
set nu
set relativenumber

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

""" Mappings idk this is default
"map <leader>f <Plug>(easymotion-s)
"map <leader>e <Plug>(easymotion-f)

map <leader>d <Action>(Debug)
"map <leader>r <Action>(RenameElement)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)

map <leader>s <Action>(SelectInProjectView)
map <leader>a <Action>(Annotate)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <S-Space> <Action>(GotoNextError)

map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>o <Action>(FileStructurePopup)

""" Mappings Personal --------------------------------
map <A-f> <Action>(GotoFile)
map <leader>aa <Action>(GotoAction)
map <TAB> <Action>(NextTab)
map <S-TAB> <Action>(PreviousTab)
map ~ <Action>(ReopenClosedTab)

inoremap <C-c> <Esc>
xnoremap <leader>pp "_dP

nnoremap <leader>y "+y
vnoremap <leader>y "+y
nnoremap <leader>Y "+Y

nnoremap <leader>p "+p
vnoremap <leader>p "+p
nnoremap <leader>P "+P

nnoremap ; :
vnoremap ; :
nnoremap <leader>d "_d

nnoremap <C-a> ggVG
nnoremap J mzJ`z
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv

nnoremap <C-t> :action ActivateTerminalToolWindow<CR>
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>
nnoremap q :action CloseContent<CR>
nnoremap Q :action CloseAllEditor<CR>
nnoremap <C-x> :action CloseAllEditorsButActive<CR>