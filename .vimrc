unlet! skip_defaults_vim
source $VIMRUNTIME/defaults.vim
set scrolloff=10
set number
set relativenumber
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
"set autoindent
"set smarttab
"set hlsearch
"set incsearch
"set ignorecase
"set smartcase
"set showmatch
"set showmode
"set ruler
"set laststatus=2
"set wildmenu
"set wildmode=list:longest

"set background=dark
"colorscheme desert
let mapleader = " "
nnoremap <leader>pv :Vex<CR>
"syntax on

"colorscheme desert
